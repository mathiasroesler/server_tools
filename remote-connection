#!/bin/bash

#########################################################
### Bash script to connect to a remote server.        	#
### Last modified: 02/2021			      	#
### Author: Mathias Roesler		      	      	#
### Contact: mathias.roesler@univ-reims.fr    	      	#
#########################################################


# Get necessary functions
source server_functions
define_const


function print_usage() {
	# Prints function usage.
	#
	# Arguments:
	# Return:
	#
	printf "Usage: $NAME [-hlL] [-ad server] [-p port] [-o options] server \n" 
	printf "Connects to a remote server using ssh.\n\n"
	print_options

return 0
}


ADD=false
DELETE=false
PORT=false
OPTION=false

# Parse options
while getopts ":hlLa:d:p:o:" opt; do
	case $opt in
		h) 
			print_usage
			exit 0
			;;
		l)
			print_available_servers
			exit 0
			;;
		L)
			print_available_servers "long"
			exit 0
			;;
		a)
			server=${OPTARG}
			ADD=true
			;;
		d)
			server=${OPTARG}
			DELETE=true
			;;
		p)
			port_number=${OPTARG}
			PORT=true
		       	;;
		o)
			options=${OPTARG}
			OPTION=true
			;;
		?)
			error_handler "invalid option."
			;;
	esac
done

if [[ $ADD == true ]]; then
	add_server 
	exit 0
fi

if [[ $DELETE == true ]]; then
	delete_server $server
	exit 0
fi

# Shift to first argument after options.
shift $(($OPTIND - 1))

argument_nb_check $# 1

set_connection_params $1

print_info
ssh -p $port_number $options $server 
