#!/bin/bash

source server_functions

function print_usage() {
	# Prints function usage.
	#
	# Arguments:
	# Return:
	#
	printf "Usage: $NAME [-hr] [-p number] server file destination\n"
	printf "Copy file from remote server to destination or "
	printf "multiple files from remote server to destination "
	printf "directory. There are $NB_SERVERS available servers: \n"
	available_servers
	printf "Options:\n"
	printf " -h, print help.\n"
	printf " -r, copy directories recursively.\n"
	printf " -p number, specify port number.\n"

return 0
}


RECURSIVE=false
PORT=false
port_number=22

# Parse options
while getopts ":rhp:s:" opt; do
	case $opt in
		r) 
			RECURSIVE='true' 
			;;
		h) 
			print_usage
			exit 
			;;
		p)
			port_number=${OPTARG}
			PORT=true
		       	;;
		?)
			echo "$NAME: invalid option."
			echo "Try '$NAME -h' for help."
			exit
			;;
	esac
done

if [[ $# -lt 3 ]]; then
	echo "$NAME: not enough arguments."
	echo "Try '$NAME -h' for help."
	exit
fi

# Shift to first argument after options
shift $(($OPTIND - 1))

set_connection_params $1; shift

ARGS="$@"
destination=${@: -1}
files=${ARGS%${destination}}

if [[ $RECURSIVE == 'true' ]]; then
	print_info
	scp -rP $port_number $options $server:$files $destination

else
	print_info
 	scp -P $port_number $options $server:$files $destination
fi

